@model OyunListViewModel

<div class="container-fluid">
    <div class="row justify-content-between">
        <div class="col-8">
            @{ var i = 0; }
            @foreach (var item in Model.Oyunlar)
            {
                { i += 1; }
                <div class="row">
                    <div class="col-12 d-flex align-items-center" style="border:solid;border-color:black">
                        <div class="col-1">
                            <p><font face="trajan" color="white" size="10"><b>@i.</b></font></p>
                        </div>
                        <div class="col-5">
                            <img src="~/img/oyun/@item.Resim" alt="..." class="img-thumbnail">
                        </div>
                        <div class="col-6">
                            <p style="color:white;">Oyun: <a style="color:white;" href="/populer/detail/@item.OyunID">@item.OyunAdi</a></p>
                            <p style="color:white;">Görüntülenme Sayısı: @item.GoruntulenmeSayisi</p>
                        </div>
                    </div>
                </div>
            }
            <br />
        </div>
        <div class="col-3" style="background-color:black;">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Active</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#">Disabled</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="col-3" style="background-color:black;">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Active</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#">Disabled</a>
                </li>
            </ul>
        </div>
    </div>
</div>