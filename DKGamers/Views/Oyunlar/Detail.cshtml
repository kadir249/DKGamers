@model OyunDetailViewModel

<div class="container-fluid">
    <div class="col-12 d-flex align-items-center">
        <div class="col-5">
            <img src="~/img/oyun/@Model.Oyun.Resim" alt="..." class="img-fluid">
        </div>
        <div class="col-7">
            <p style="color:white;">Oyun: @Model.Oyun.OyunAdi</p>
            <p style="color:white;">
                Türü: @foreach (var item in Model.Oyun.OyunKategorileri)
                {
                    @item.Kategori.KategoriAdi
                    <span>,</span>
                }
            </p>
            <p style="color:white;">Çıkış Tarihi: @Model.Oyun.PiyasayaSurulmeTarihi.ToShortDateString()</p>
            <p style="color:white;">Geliştirici: @Model.Oyun.Gelistirici</p>
            <p style="color:white;">Yayıncı: @Model.Oyun.Yayinci</p>
            <p style="color:white;">Açıklama: @Model.Oyun.Aciklama</p>
            @if (User.Identity.IsAuthenticated)
            {
                <a href="/Favori/FavoriyeEkle/@Model.Oyun.OyunID" class="btn btn-success btn-circle text-uppercase"><span class="glyphicon glyphicon-send"></span></a>
            }
        </div>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <form action="/Oyunlar/CreateComment" method="post" class="form-horizontal"  >
            <input type="hidden" name="OyunID" value="@Model.Oyun.OyunID" />
            <div class="form-group">
                <label for="email" class="col-sm-2 control-label">Yorum</label>
                <div class="col-12">
                    <textarea class="form-control" name="YapilanYorum"  rows="5"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-12">
                    <button class="btn btn-success btn-circle text-uppercase" type="submit"><span class="glyphicon glyphicon-send"></span> Yorumu Ekle</button>
                </div>
            </div>
        </form>
    }
<div class="col-12 d-flex align-items-center">
    <div class="col-12">
        <h2><font style="color:white;">Yorumlar</font></h2>
        <p style="color:white;">
            @foreach (var item in Model.Yorumlar)
            {
                @item.YapilanYorum <br />
            
            }
        </p>
    </div>
</div>

</div>